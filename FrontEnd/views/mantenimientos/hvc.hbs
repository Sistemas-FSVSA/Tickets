<link rel="stylesheet" href="/css/mantenimientos/hvc.css">

<div class="container-fluid mt-2">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Hoja de Vida de Cómputo</h2>
        <button id="volver" class="btn btn-fsvsaon"><i class="fas fa-angle-double-left mr-1"></i>Volver</button>
    </div>

    <form id="editarInventarioForm" class="needs-validation" novalidate="">
        <input type="hidden" id="idInventario" value="91">
        <div class="row">
            <div class="col-md-2 mb-3">
                <label for="sn">SN</label>
                <input type="text" class="form-control" id="sn" disabled>
            </div>
            <div class="col-md-3 mb-3">
                <label for="ip">IP</label>
                <input type="text" class="form-control" id="ip" disabled>
            </div>
            <div class="col-md-3 mb-3">
                <label for="mac">MAC</label>
                <input type="text" class="form-control" id="mac" disabled>
            </div>
            <div class="col-md-2 mb-3">
                <label for="datos">Datos</label>
                <input type="text" class="form-control" id="datos" disabled>
            </div>
            <div class="col-md-2 mb-2">
                <label for="procesador">Procesador</label>
                <input type="text" class="form-control" id="procesador" disabled>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2 mb-3">
                <label for="tiporam">RAM</label>
                <input type="text" class="form-control" id="tiporam" disabled>
            </div>
            <div class="col-md-2 mb-3">
                <label for="cantidadram">Cantidad</label>
                <input type="text" class="form-control" id="cantidadram" disabled>
            </div>
            <div class="col-md-2 mb-3">
                <label for="tipoalmacenamiento">Storage</label>
                <input type="text" class="form-control" id="tipoalmacenamiento" disabled>
            </div>
            <div class="col-md-2 mb-3">
                <label for="cantidadalmacenamiento">Cantidad</label>
                <input type="text" class="form-control" id="cantidadalmacenamiento" disabled>
            </div>
            <div class="col-md-2 mb-3">
                <label for="formatoEquipo">Formato del Equipo</label>
                <input type="text" class="form-control" id="formatoEquipo" disabled>
            </div>
            <div class="col-md-2 mb-3">
                <label for="marca">Marca</label>
                <input type="text" class="form-control" id="marca" disabled>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 mb-3">
                <label for="so">S.O</label>
                <input type="text" class="form-control" id="so" disabled>
            </div>
            <div class="col-md-3 mb-3">
                <label for="nombreequipo">Nombre Equipo</label>
                <input type="text" class="form-control" id="nombreequipo" disabled>
            </div>
            <div class="col-md-3 mb-3">
                <label for="dependencia">Dependencia</label>
                <input type="text" class="form-control" id="dependencia" disabled>
            </div>
            <div class="col-md-3 mb-3">
                <label for="responsable">Responsable</label>
                <input type="text" class="form-control" id="responsable" disabled>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 mb-3">
                <label for="usuario">Usuario</label>
                <input type="text" class="form-control" id="usuario" disabled>
            </div>
            <div class="col-md-3 mb-3">
                <label for="cargousuario">Cargo Usuario</label>
                <input type="text" class="form-control" id="cargousuario" disabled>
            </div>
            <div class="col-md-6 mb-3">
                <label for="observaciones">Observaciones</label>
                <textarea class="form-control" id="observaciones" disabled></textarea>
            </div>
        </div>
    </form>

    <div class="button-container mt-4 mb-3">
        <button id="abrirMantenimiento" type="button" class="btn btn-fsvsaon"><i class="fas fa-plus mr-1"></i>Registrar Mantenimiento</button>
        <button id="verTickets" type="button" class="btn btn-fsvsaoff"><i class="far fa-eye mr-1"></i> Ver Tickets</button>
    </div>

    <table id="tablaMantenimientos" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Actividad</th>
                <th>Fecha</th>
                <th>Observaciones</th>
                <th>Responsable</th>
            </tr>
        </thead>
        <tbody id="tbodymantenimientos">
            <!-- Se llenarán dinámicamente -->
        </tbody>
    </table>

    <!-- Modal de Registro de Mantenimiento -->
    <div id="modalMantenimiento" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Registrar Mantenimiento</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form id="formMantenimiento">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="tipoMantenimiento" class="form-label">Tipo de Mantenimiento</label>
                            <select id="tipoMantenimiento" class="form-control"></select>
                        </div>
                        <div class="mb-3">
                            <label for="observacionesMantenimiento" class="form-label">Observaciones</label>
                            <textarea id="observacionesMantenimiento" class="form-control" rows="3" required></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-fsvsaoff" data-dismiss="modal"><i class="fas fa-times mr-1"></i>Cancelar</button>
                        <button id="registrarMantenimiento" type="button" class="btn btn-fsvsaon"><i class="fas fa-plus mr-1"></i>Registrar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>


    <script type="module" src="/controllers/mantenimientos/hvc.js" defer></script>