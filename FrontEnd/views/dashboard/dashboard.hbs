<link rel="stylesheet" href="/css/dashboard/dashboard.css">

<body>
    <div class="container-fluid mt-4">
        <!-- Encabezado -->
        <div class="row">
            <div class="col-12">
                <h2 class="text-center mb-4">Dashboard General</h2>
            </div>
        </div>

        <!-- Tarjetas de estadísticas -->
        <div class="row text-center">
            <div class="col-md-3 mb-3">
                <div class="card text-white" style="background-color: #00205C;">
                    <div class="card-body">
                        <h5 class="card-title">Tickets Activos</h5>
                        <p class="card-text fs-2" id="ticketsActivos">0</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card text-white" style="background-color: #8A2432;">
                    <div class="card-body">
                        <h5 class="card-title">Tickets Leídos</h5>
                        <p class="card-text fs-2" id="ticketsPendientes">0</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card text-dark" style="background-color: #FFFFFF;">
                    <div class="card-body">
                        <h5 class="card-title">Tickets Cerrados</h5>
                        <p class="card-text fs-2" id="ticketsGestionados">0</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card text-white" style="background-color: #001E59;">
                    <div class="card-body">
                        <h5 class="card-title">Equipos Activos</h5>
                        <p class="card-text fs-2" id="equiposActivos">3</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Filtros de fecha -->
        <div class="row mb-3">
            <div class="col-md-6">
                <label for="fechaInicio">Desde:</label>
                <input type="date" id="fechaInicio" class="form-control">
            </div>
            <div class="col-md-6">
                <label for="fechaFin">Hasta:</label>
                <input type="date" id="fechaFin" class="form-control">
            </div>
        </div>

        <!-- Gráficos -->
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header text-white" style="background-color: #8a9db2;">
                        <h6>Tickets por Area</h6>
                    </div>
                    <div class="card-body">
                        <canvas id="salesChart"></canvas>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card">
                    <div class="card-header text-white" style="background-color: #8a9db2;">
                        <div class="d-flex justify-content-between align-items-center">
                            <h6 class="mb-0">Modificaciones por Mes</h6>
                            <select id="selectAnio" class="form-select form-select-sm" style="width: 100px;">
                                <!-- Opciones de años se llenarán dinámicamente -->
                            </select>
                        </div>
                    </div>
                    <br>
                    <br>
                    <div class="card-body" style="padding-bottom: 0;"> <!-- Reducir padding inferior -->
                        <div class="chart-container" style="position: relative; height: 450px;">
                            <!-- Aumentar altura -->
                            <canvas id="modificationsChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card">
                    <div class="card-header text-white" style="background-color: #8a9db2;">
                        <h6>Temas Más Solicitados</h6>
                    </div>
                    <div class="card-body">
                        <canvas id="usersChart"></canvas>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card">
                    <div class="card-header text-white" style="background-color: #8a9db2;">
                        <h6>Subtemas Más Solicitados</h6>
                    </div>
                    <div class="card-body">
                        <canvas id="usersChartSubtemas"></canvas>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card">
                    <div class="card-header text-white" style="background-color: #8a9db2;">
                        <h6>Mantenimientos</h6>
                    </div>
                    <div class="card-body">
                        <!-- Barra de progreso -->
                        <div class="progress-container mb-3">
                            <div class="d-flex justify-content-between mb-1">
                                <span>Progreso de mantenimientos realizados</span>
                                <span id="progresoText">0%</span>
                            </div>
                            <div class="progress" style="height: 10px;">
                                <div id="progresoBar" class="progress-bar bg-success" role="progressbar"
                                    style="width: 0%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                            <small class="text-muted" id="progresoDetail">0 de 0 equipos realizados</small>
                        </div>
                        <!-- Gráfico de mantenimiento -->
                        <div class="chart-container" style="position: relative;">
                            <canvas id="maintenanceChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Nueva Sección: Estadísticas del Servidor -->
            <div class="col-12 col-md-6">
    <div class="card h-90">
        <!-- Sección superior: Texto e información -->
        <div class="card-body p-3">
            <!-- Cabecera del monitor -->
            <div class="server-status-container mb-4">
                <h5 class="card-title mb-2" style="font-size: 1.2rem;">Monitor del Servidor:</h5>
                <div class="d-flex align-items-center">
                    <span id="server-status" class="server-status-text card-text fw-bold" style="font-size: 1rem; color: #28a745;">Óptimo</span>
                    <span id="server-status-icon" class="ms-2">
                        <i class="fas fa-circle" style="font-size: 1rem; color: #28a745;"></i>
                    </span>
                </div>
            </div>

            <!-- Información adicional -->
            <div id="monitorInfo" class="small text-muted mb-4">
                <div class="mb-3"><strong style="font-size: 1rem;">CPU:</strong> <span id="cpu-usage" style="font-size: 1rem;">0%</span></div>
                <div class="mb-3"><strong style="font-size: 1rem;">Memoria:</strong> <span id="memory-usage" style="font-size: 1rem;">0 MB/0 MB</span></div>
                <div><strong style="font-size: 1rem;">Últ. actualización:</strong> <span id="last-update" style="font-size: 1rem;">00:00:00</span></div>
            </div>
        </div>

        <!-- Sección inferior: Gráfico -->
        <div class="card-body">
            <div style="position: relative;">
                <canvas id="monitorChart" class="w-100" style="max-height: 400px;"></canvas>
            </div>
        </div>
    </div>
</div>
        </div>


    </div>

    <script src="/controllers/dashboard/dashboard.js" defer></script>
</body>