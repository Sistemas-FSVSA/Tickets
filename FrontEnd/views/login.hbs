<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Centro de Soporte FSV</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
    <link rel="icon" href="/image/favicon.ico" type="image/x-icon">
    <style>
    body {
        display: flex;
        flex-direction: column;
        justify-content: flex-start; 
        min-height: 100vh;
        margin: 0;
        background-color: #163c64;
        font-family: Arial, sans-serif;
        color: #fff;
    }

    .main-content {
        display: flex;
        justify-content: center; 
        align-items: center;
        flex-grow: 1; 
        width: 100%;
    }

    .card {
        width: 100%;
        max-width: 800px;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.3);
    }

    .card-header {
        background-color: #ffffff;
        text-align: center;
        padding: 20px;
    }

    .card-header img {
        max-height: 150px;
    }

    .card-body {
        padding: 30px;
        background-color: #f8f9fa;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-bottom: 15px;
        width: 100%; 
    }

    .mb-3 {
        text-align: center; 
    }

    .form-label {
        display: block; 
        text-align: center;
    }

    .form-control {
        width: 100%;
        max-width: 800px; 
        border-radius: 5px;
        text-align: center;
        padding: 10px;
        font-size: 16px;
    }

    .btn-custom {
        background-color: #96072d;
        color: #fff;
        width: 100%; 
        max-width: 200px; 
        margin-top: 15px;
    }

    .btn-custom:hover {
        background-color: #0056b3;
    }

    .btn-back {
        color: #96072d;
        text-decoration: none;
        font-weight: bold;
        margin-top: 12px;
        margin-left: 10px;
        margin-bottom: 2px;
    }

    .btn-back:hover {
        color: #0056b3;
    }

    .footer-text {
        text-align: center;
        color: #ffffff;
        padding: 10px;
        font-size: 14px;
        width: 100%;
        position: relative;
        bottom: 0;
        margin-top: auto;
    }

    @media (max-width: 576px) {
        .card {
            margin: 10px;
        }

        .footer-text {
            font-size: 12px;
        }
    }
    </style>
</head>
<body>
    <!-- Contenido principal -->
    <div class="main-content">
        <div class="card">
            <!-- Botón de Back -->
            <div class="d-flex justify-content-start">
                <a href="/" class="btn-back">⬅ Atrás</a>
            </div>
            <!-- Encabezado -->
            <div class="card-header">
                <img src="/image/logoblanco.png" alt="Funeraria San Vicente" class="img-fluid">
            </div>
            <!-- Contenido -->
            <div class="card-body">
                <form id="login" method="post" enctype="multipart/form-data" class="row g-3">
                    <div class="mb-3">
                        <label for="documento" class="form-label">Documento</label>
                        <input type="text" class="form-control" id="identificacion" placeholder="Ingresa tu documento" required>
                    </div>
                    <div class="mb-3">
                        <label for="contraseña" class="form-label">Contraseña</label>
                        <input type="password" class="form-control lg" id="password" placeholder="Ingresa tu contraseña" required>
                    </div>
                    <!-- Botón de Iniciar Sesión -->
                    <div class="col-12 text-center">
                        <button type="submit" class="btn btn-custom w-50">Iniciar Sesión</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <div class="footer-text">
        Derechos de autor © 2025, Funeraria San Vicente S.A. By - Sistemas
    </div>
    <script src="/config.js"></script>
    <script src="/controllers/login.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</body>
</html>
