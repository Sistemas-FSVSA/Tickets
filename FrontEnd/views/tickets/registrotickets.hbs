<link rel="stylesheet" href="/css/tickets/registrotickets.css">

<body>
    <header class="header">
        <h1>Registro</h1>
    </header>
    <div class="container-fluid mt-4">
        <div class="card">
            <div class="card-body">
                <h1><i class="fas fa-bookmark"></i></h1><button class="btn btn-fsvsaoff" data-toggle="modal"
                    data-target="#nuevaDependenciaModal" id="abrirModalDependencia">Dependencia</button>
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <h1><i class="fas fa-phone-alt"></i></h1><button class="btn btn-fsvsaon" data-toggle="modal"
                    data-target="#nuevoSoporteModal" id="abrirModalSoporte">Tipo Soporte</button>
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <h1><i class="fas fa-book"></i></h1><button class="btn btn-fsvsaon" data-toggle="modal"
                    data-target="#nuevoTemasModal" id="abrirModalTemas">Temas</button>
            </div>
        </div>

        {{> modaltickets }}
    </div>
    <script src="/controllers/tickets/registrotickets.js" defer></script>
</body>