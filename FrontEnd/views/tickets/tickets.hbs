<link rel="stylesheet" href="/css/tickets/tickets.css">

<body>
    <div class="container-fluid mt-4">
        <div class="row">
            <!-- Bandeja de entrada -->
            <div class="col-md-4 col-lg-3">
                <div class="card">
                    <div class="card-header text-white" style="background-color: #96072d;">
                        <h6 class="mb-0">Bandeja de entrada</h6>
                    </div>
                    <div class="list-group inbox-scroll">
                        <!-- Los tickets se cargarán aquí dinámicamente -->
                    </div>
                </div>
            </div>

            <!-- Contenido del ticket -->
            <div class="col-md-8 col-lg-9">
                <div class="card">
                    <div class="card-header text-white" style="background-color: #163c64;">
                        <h6 class="mb-0">Tickets</h6>
                    </div>
                    <div class="card-body ticket-scroll">
                        <small id="emailTitle" class="text-muted">Bienvenido</small>
                        <p id="emailContent" class="mt-2">
                            Selecciona un ticket en la bandeja de entrada para poder gestionarlo
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Gestionar -->
    <div id="gestionarModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="gestionarModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="gestionarModalLabel">Gestionar Ticket</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <!-- Formulario con validaciones de Bootstrap -->
                    <form id="formGestionarTicket" class="needs-validation" novalidate>
                        <!-- Primera fila: ID del Ticket y Selector de Soporte -->
                        <div class="form-row">
                            <div class="form-group col-md-2">
                                <label for="idticket">ID del Ticket</label>
                                <input type="text" class="form-control" id="idticket" readonly>
                            </div>
                            <div class="form-group col-md-10">
                                <label for="soporte">Seleccionar Opción</label>
                                <select class="form-control" id="soporte" name="soporte">
                                    <!-- Opciones cargadas dinámicamente -->
                                </select>
                                <div class="invalid-feedback">Debe seleccionar una opción.</div>
                            </div>
                        </div>

                        <!-- Observación -->
                        <div class="form-group">
                            <label for="observacion">Observación</label>
                            <textarea class="form-control" id="observacion" rows="4"
                                placeholder="Escriba una observación" required></textarea>
                            <div class="invalid-feedback">Debe ingresar una observación.</div>
                        </div>

                        <!-- Falsa Alarma y SN del Equipo -->
                        <div class="form-row align-items-center">
                            <div class="form-group col-md-6">
                                <label for="falsaAlarma" class="d-block">¿Es falsa alarma?</label>
                                <div class="custom-control custom-switch">
                                    <input type="checkbox" class="custom-control-input" id="falsaAlarma">
                                    <label class="custom-control-label" for="falsaAlarma">
                                        <span id="switchLabel">No</span>
                                    </label>
                                </div>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="snEquipo">SN del Equipo</label>
                                <input type="text" class="form-control" id="snEquipo"
                                    placeholder="Ingrese el SN del equipo">
                            </div>
                        </div>

                        <!-- Botones -->
                        <div class="modal-footer">
                            <button type="button" class="btn btn-fsvsaoff" data-dismiss="modal"><i
                                    class="fas fa-times mr-1"></i>Cancelar</button>
                            <button type="submit" class="btn btn-fsvsaon" id="guardarGestion"><i
                                    class="fas fa-plus mr-1"></i>Registrar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script type="module" src="/controllers/tickets/tickets.js"></script>