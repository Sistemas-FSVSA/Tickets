<body>
    <div class="container-fluid">
        <div class="card-header py-3 d-flex content-between align-items-center" style="border-bottom: none;">
            <h5 class="m-0">Registro de Items</h5>
            <button id="btnRegistrarItem" class="btn btn-fsvsaon ml-auto">
                <i class="fas fa-plus mr-1"></i> Registrar Item
            </button>
        </div>
        <div class="container-fluid mt-4">
            <div class="table-responsive">
                <table id="tablaBitacora" class="table table-striped table-bordered" style="width: 99%;">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Item</th>
                            <th>Tipo Movimiento</th>
                            <th>Cantidad</th>
                            <th>Stock Anterior</th>
                            <th>Stock Nuevo</th>
                            <th>Responsable</th>
                            <th>Fecha</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Los datos se cargarán dinámicamente -->
                    </tbody>
                </table>
            </div>
        </div>

    </div>

    <!-- Modal para registrar item -->
    <div class="modal fade" id="modalRegistrarItem" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Registrar Item</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="formRegistrarItem">
                        <div class="mb-3">
                            <label for="nombreItem" class="form-label">Nombre del Item</label>
                            <input type="text" class="form-control" id="nombreItem" required>
                        </div>
                        <div class="mb-3">
                            <label for="cantidadItem" class="form-label">Cantidad</label>
                            <input type="number" class="form-control" id="cantidadItem" min="1" required>
                        </div>
                        <div class="mb-3">
                            <label for="selectCategoria" class="form-label">Categoría</label>
                            <select class="form-control" id="selectCategoria" required>
                                <option value="">Seleccionar categoría...</option>
                                <!-- Las opciones se llenan dinámicamente -->
                            </select>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-fsvsaoff" data-dismiss="modal"><i class="fas fa-times mr-1"></i>Cancelar</button>
                            <button type="submit" class="btn btn-fsvsaon" id="btnGuardarItem"><i class="fas fa-plus mr-1"></i>Registrar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal para registrar movimiento -->
    <div class="modal fade" id="modalRegistrarMovimiento" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Registrar Movimiento</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form id="formRegistrarMovimiento">
                    <div class="modal-body">
                        <input type="hidden" id="movimientoIdItem">
                        <div class="mb-3">
                            <label for="movimientoTipo" class="form-label">Tipo de Movimiento</label>
                            <select class="form-control" id="movimientoTipo" required>
                                <option value="">Seleccionar...</option>
                                <option value="entrada">Entrada</option>
                                <option value="salida">Salida</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="movimientoCantidad" class="form-label">Cantidad</label>
                            <input type="number" class="form-control" id="movimientoCantidad" min="1" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-fsvsaoff" data-dismiss="modal"><i class="fas fa-times mr-1"></i>Cancelar</button>
                        <button type="submit" class="btn btn-fsvsaon"><i class="fas fa-plus mr-1"></i>Registrar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="/controllers/bodega/bodega.js"></script>
</body>